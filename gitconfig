# vim: ft=gitconfig
[include]
    path = ~/.gitconfig_local
[user]
    name = Mark Harviston
[push]
    default = current
[cola]
    spellcheck = false
[core]
    editor = vim
[alias]
    autosquash = git rebase -i master --autosquash
    recent-branches = 'git branch --sort=-committerdate'
[init]
    defaultBranch = master
    excludesFile = ~/.gitignore_global
    attributesfile = ~/.gitattributes
    ppush = push --force-with-lease
    bbranch = branch --sort=-committerdate
