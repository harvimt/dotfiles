[include]
    path = ~/.gitconfig_local
[user]
    name = Mark Harviston
[push]
    default = current
    followTags = true
[core]
    excludesfile = ~/.gitignore_global
    editor = /usr/bin/vim
    attributesfile = ~/.gitattributes
[cola]
    spellcheck = false
[diff]
    tool = meld
[difftool]
    rompt = false
[difftool "meld"]
    trustExitCode = true
    cmd = open -W -a Meld --args \"$LOCAL\" \"$PWD/$REMOTE\"
[difftool "json-diff"]
    cmd = "json-diff-tool $BASE $LOCAL $REMOTE"
    trustExitCode = true
[merge]
    tool = meld
[merge "json"]
    name = custom merge driver for json files
    driver = git-json-merge %A %O %B
[mergetool]
    prompt = false
[mergetool "meld"]
    trustExitCode = true
    cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"
[alias]
    json-diff = difftool -t json-diff
    co = checkout
[remote "origin"]
    tagopt = --tags
[http]
	sslCAInfo = /Users/mharvist/lgl-ca
[submodule]
	recurse = true
